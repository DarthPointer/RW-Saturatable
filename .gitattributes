# ==================================================
# Auto detect text files and perform LF
# normalization.
# ==================================================

* text=auto

# ==================================================
# Plain text
# ==================================================

*.cfg       text    eol=lf
*.CFG       text    eol=lf
*.csproj    text    eol=lf
*.CSPROJ    text    eol=lf
*.md        text    eol=lf
*.MD        text    eol=lf
*.sln       text    eol=crlf
*.SLN       text    eol=crlf
*.txt       text    eol=lf
*.TXT       text    eol=lf
*.xml       text    eol=lf
*.XML       text    eol=lf

# ==================================================
# Source code
# ==================================================

*.cs        text    eol=lf  diff=csharp
*.CS        text    eol=lf  diff=csharp

# ==================================================
# Assemblies and database files.
# ==================================================

*.dll       binary
*.DLL       binary

# ==================================================
# Ignore list
# ==================================================

.gitattributes export-ignore
.gitignore     export-ignore
*.md           export-ignore
*.MD           export-ignore
